<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/witle"
    android:orientation="vertical">

    <include layout="@layout/activity_title_bar" />

    <LinearLayout
        android:id="@+id/downfile_jd_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="5dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:id="@+id/downfile_jd_num"
                android:layout_width="0dip"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="文件下载中-100%"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/downfile_jd_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="文件大小:"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/downfile_jd"
            style="@style/StyleProgressBarMini"
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:background="@drawable/shape_progressbar_bg"
            android:max="100"
            android:progress="0" />


    </LinearLayout>


    <ListView
        android:id="@+id/enclo_list_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/baise"/>

</LinearLayout>