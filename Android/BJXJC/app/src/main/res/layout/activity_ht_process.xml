<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_title_color"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/bar_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:background="@color/app_title_color"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/app_title_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="19dip"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/back_selector_01" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="工艺画面"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <LinearLayout
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_more_icon"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <WebView
            android:id="@+id/wv_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:id="@+id/lin_pipe_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bt_gray_border_01"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_5"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/ic_layers_01"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_pipe"
            android:layout_width="200dip"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bt_gray_border_01"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tv_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/mainColor"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dip"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dm028"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dm008"
                        android:layout_marginStart="@dimen/dm050"
                        android:text="数据列表"
                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dm015"
                        android:background="@drawable/icon_close_01"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/tab_line_color"
                    android:gravity="center"
                    android:orientation="vertical" />


            </LinearLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbarThumbVertical="@drawable/scrollbar_ver_thumb">

                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
