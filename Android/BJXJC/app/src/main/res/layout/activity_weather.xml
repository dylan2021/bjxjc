<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_login_bg1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"
        android:orientation="vertical">

        <include layout="@layout/activity_title_bar" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_home_weather"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:src="@mipmap/img_weather_dy" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                   />

                <ImageView
                    android:id="@+id/iv_home_weather_close"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:src="@mipmap/icon_close_02" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_home_weather_wd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18  â„ƒ"
                android:textColor="@color/witle"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_home_weather_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_5"
                android:text="..."
                android:textColor="@color/witle"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_home_weather_memo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:text="..."
                android:textColor="@color/witle"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_home_weather_pubdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="right"
                android:text="yyyy-mm-dd"
                android:textColor="@color/witle"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_tm_01"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">


                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/baise" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>