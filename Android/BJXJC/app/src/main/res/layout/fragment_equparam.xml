<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/witle"
    android:orientation="vertical">

    <!--基础信息-->
    <LinearLayout
        android:padding="@dimen/dp_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/witle"
        android:orientation="vertical">


        <LinearLayout style="@style/from_equ_lin_style">

            <LinearLayout style="@style/from_equ_title_lin_style">

                <TextView
                    style="@style/from_title_style"
                    android:textSize="@dimen/sp_13"
                    android:text="设备参数:" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_P1"
                style="@style/from_field_style" />
        </LinearLayout>

        <View style="@style/style_line_1px" />
        <LinearLayout style="@style/from_equ_lin_style">

            <LinearLayout style="@style/from_equ_title_lin_style">

                <TextView
                    style="@style/from_title_style"
                    android:textSize="@dimen/sp_13"
                    android:text="养护要求:" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_P2"
                style="@style/from_field_style" />
        </LinearLayout>
        <View style="@style/style_line_1px" />


    </LinearLayout>


</LinearLayout>
