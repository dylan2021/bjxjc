<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/app_title_color"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/item_AssetState"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_red_01"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:text="未处理"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:id="@+id/item_mytask"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_blue_01"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:text="我的任务"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_8" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_list_title_style"
                    android:text="设备名称：" />

                <TextView
                    android:id="@+id/item_equname"
                    android:ellipsize="end"
                    android:singleLine="true"
                    style="@style/item_list_body_style" />
                <TextView
                    style="@style/item_list_title_style"
                    android:text="处理结果：" />

                <TextView
                    android:id="@+id/item_result"
                    style="@style/item_list_body_style" />



            </LinearLayout>


            <LinearLayout style="@style/item_eventlist_lin_style">

                <TextView
                    style="@style/item_list_title_style"
                    android:text="报  修  人：" />

                <TextView
                    android:id="@+id/item_RepairUserName"
                    style="@style/item_list_body_style" />

                <TextView

                    style="@style/item_list_title_style"
                    android:text="报修时间：" />

                <TextView
                    android:id="@+id/item_RepairDate"
                    style="@style/item_list_body_style" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_list_space" />

</LinearLayout>
