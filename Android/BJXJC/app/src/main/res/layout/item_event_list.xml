<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dm010"
        android:padding="@dimen/main_margin_left_x">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_red_01"
                android:gravity="center"
                android:padding="@dimen/dp_2"
                android:text="未处理"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/item_1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout style="@style/item_eventlist_lin_style">

            <TextView
                style="@style/item_list_title_style"
                android:text="发生时间：" />

            <TextView
                android:id="@+id/item_3"
                style="@style/item_list_body_style" />

        </LinearLayout>

        <LinearLayout style="@style/item_eventlist_lin_style">

            <TextView

                style="@style/item_list_title_style"
                android:text="所属部门：" />

            <TextView
                android:id="@+id/item_2"
                style="@style/item_list_body_style" />

        </LinearLayout>


        <LinearLayout style="@style/item_eventlist_lin_style">

            <TextView

                style="@style/item_list_title_style"
                android:text="处  理  人：" />

            <TextView
                android:id="@+id/item_4"
                style="@style/item_list_body_style" />
        </LinearLayout>

        <LinearLayout style="@style/item_eventlist_lin_style">

            <TextView
                style="@style/item_list_title_style"
                android:text="等        级：" />

            <TextView
                android:id="@+id/item_5"
                style="@style/item_list_body_style" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_list_space" />

</LinearLayout>
