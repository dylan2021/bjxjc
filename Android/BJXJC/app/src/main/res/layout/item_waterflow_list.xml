<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-5-10"
                    android:textColor="@color/text_lgray"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:20"
                    android:textColor="#1589ca"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_img"
                android:layout_width="20dip"
                android:layout_height="66dip"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@mipmap/ic_flow_start"
                android:orientation="vertical" />


            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_msg"
                    android:padding="@dimen/dp_3"
                    android:background="@drawable/bt_flow_msg_01"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="产生积水了,请及时进行处理！"
                    android:textColor="@color/witle"
                    android:textSize="@dimen/sp_11" />



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
