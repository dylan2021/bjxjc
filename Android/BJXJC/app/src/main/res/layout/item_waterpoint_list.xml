<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_1"
            android:orientation="horizontal">

            <TextView
                style="@style/item_list_title_style"
                android:text="积水位置：" />



            <TextView
                android:id="@+id/item_1"
                style="@style/item_list_body_style" />


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/bt_red_01"
                android:padding="@dimen/dp_2"
                android:text="未处理"
                android:textStyle="bold"
                android:textColor="@color/witle"
                android:textSize="@dimen/sp_9" />
        </LinearLayout>


        <LinearLayout style="@style/item_list_lin_style">

            <TextView

                style="@style/item_list_title_style"

                android:text="处置队伍：" />

            <TextView
                android:id="@+id/item_2"
                android:ellipsize="end"
                android:singleLine="true"
                style="@style/item_list_body_style" />

            <TextView

                style="@style/item_list_title_style"
                android:text="积水时间：" />

            <TextView
                android:id="@+id/item_3"
                style="@style/item_list_body_style" />

        </LinearLayout>


        <LinearLayout style="@style/item_list_lin_style">

            <TextView

                style="@style/item_list_title_style"
                android:text="积水深度：" />

            <TextView
                android:id="@+id/item_4"
                android:ellipsize="end"
                android:singleLine="true"
                style="@style/item_list_body_style" />
            <TextView

                style="@style/item_list_title_style"
                android:text="积水面积：" />

            <TextView
                android:id="@+id/item_5"
                android:ellipsize="end"
                android:singleLine="true"
                style="@style/item_list_body_style" />


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_list_space" />

</LinearLayout>
